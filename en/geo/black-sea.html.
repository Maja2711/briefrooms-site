  <script>
  (() => {
    const box = document.querySelector('.rate-box');
    if (!box) return;
    const key = 'rate:' + location.pathname;
    const voted = localStorage.getItem(key);
    if (voted) return showThanks(voted);
    box.addEventListener('click', (e) => {
      const btn = e.target.closest('[data-v]');
      if (!btn) return;
      const v = btn.dataset.v;
      localStorage.setItem(key, v);
      showThanks(v);
      // Counting was postponed; when ready, send to Formspree/GA4 here.
    });
    function showThanks(v){
      box.innerHTML = `<span>Thanks for the feedback! ${v==='up' ? 'üëç' : 'üëé'}</span>`;
    }
  })();
  </script>

